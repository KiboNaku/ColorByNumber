<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImporterActivity">

    <ImageView
        android:id="@+id/image_view_retrieved"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:onClick="paintColor"
        app:layout_constraintBottom_toTopOf="@+id/button_launch_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_launch_camera"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/button_launch_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_launch_gallery"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        app:layout_constraintBottom_toBottomOf="@+id/button_launch_camera"
        app:layout_constraintEnd_toStartOf="@+id/button_launch_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_launch_camera" />

    <ProgressBar
        android:id="@+id/progress_bar_load_image"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scroll_colors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_retrieved"
        app:layout_constraintEnd_toEndOf="@+id/image_view_retrieved"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/layout_colors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color4"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color5"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color6"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color7"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color8"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="selectColor" />

            <me.nakukibo.colorbynumber.color.ColorView
                android:id="@+id/color9"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="selectColor" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>